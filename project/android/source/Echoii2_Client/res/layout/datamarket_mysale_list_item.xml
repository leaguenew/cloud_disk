<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:gravity="center"
   android:paddingTop="8dp"
   android:paddingBottom="8dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_marketlist_item"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/grid_item_allfile" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:layout_toRightOf="@id/img_marketlist_item"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvew_item_marketlist"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="全部文件"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/tvew_item_marketlist_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.00"
                android:textColor="@color/orange"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="荐"
                android:textColor="@android:color/white"
                android:background="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvew_item_marketlist_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="3598"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人同时在阅读"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_item_marketlist_shopping"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/market_button_style"
        android:layout_marginRight="8dp"
        android:text="拍卖"
        android:textColor="@color/fonts_operate_selected" />

</RelativeLayout>