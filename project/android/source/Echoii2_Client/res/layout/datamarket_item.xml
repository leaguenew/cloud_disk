<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:background="@drawable/grid_item_bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/img_datamarket_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/grid_item_allfile"
        android:layout_marginTop="4dp"
        />
    <TextView 
        android:id="@+id/tvew_datamarket_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_datamarket_item"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/fonts_operate_selected"
        android:text="全部文件"
        />

</RelativeLayout>
